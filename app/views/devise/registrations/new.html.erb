<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
      <h2 class="text-center mb-5">Create your account</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <div class="col-12 mb-3">
            <%= f.input :first_name,
              required: true,
              autofocus: true,
              placeholder: "Ezequiel",
              input_html: { autocomplete: "name" }%>
          </div>
          <div class="col-12 mb-3">
            <%= f.input :email,
              required: true,
              autofocus: true,
              placeholder: "epuyosdacosta@gmail.com",
              input_html: { autocomplete: "email" }%>
          </div>
          <div class="col-12 mb-3">
            <%= f.input :password,
              required: true,
              placeholder: "•••••••••",
              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
              input_html: { autocomplete: "new-password" } %>
          </div>
          <div class="col-12 mb-3">
            <%= f.input :password_confirmation,
              required: true,
              placeholder: "•••••••••",
              input_html: { autocomplete: "new-password" } %>
          </div>
        </div>
        <%= f.button :submit, "Sign up", class: "btn btn-flat" %>
      <% end %>
    <br>
    </div>
    <p>If you already got an account please<%= render "devise/shared/links" %></p>
  </div>
</div>
