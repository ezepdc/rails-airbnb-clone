<div class="container">
  <div class="card-flat p-2">
    <img src="https://images.unsplash.com/photo-1505693416388-ac5ce068fe85?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" />
    <div class="card-flat-infos">
      <div>
        <h2><%= @flat.title %></h2>
        <h5><%= @flat.city %></h5>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-sm-4 col-md-6">
        <%= simple_form_for [@flat, @booking] do |f| %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.input :number_of_guests %>
          <%= f.input :details %>
          <%= f.submit "Book", class: "btn btn-flat", style: "width: 100%" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
